<%= render partial: 'backend/shared/alert' %>
<div class="clearfix"></div>

<section class="content listing-wrapper" id="admin-listing">
  <div class="box">
    <div class="col-md-12 page-header">
      <h3 class="pull-left">List Admin</h3>
      <div class="pull-right">
        <%= link_to 'New', new_admin_admin_path, class: 'btn btn-primary' %>
      </div>
    </div>
    <div class="clearfix"></div>

    <div class="box-body">
      <table class="table table-bordered listing-table">
        <thead>
        <tr>
          <th class="col-md-1">ID</th>
          <th>Email</th>
          <th class="col-md-2">Action</th>
        </tr>
        </thead>
        <tbody>
        <% @admins.each do |admin| %>
          <tr>
            <td><%= admin.id %></td>
            <td><%= admin.email %></td>
            <td>
              <% if can? :destroy, Admin %>
                <a href="<%= edit_admin_admin_path(admin) %>" class="action-icon btn btn-info">
                  Edit
                </a>
              <% end %>
              <% if can? :destroy, Admin %>
                <a href="#modal-delete" data-toggle="modal" data-id="<%= admin.id %>"
                   data-url="/admin/admins" class="action-icon remove btn btn-danger">
                  Delete
                </a>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <div class="text-center">
        <%= paginate @admins %>
      </div>
    </div>
  </div>
</section>
<div class="clearfix"></div>

<%= render partial: 'backend/shared/delete', locals: {model_name: 'Admin'} %>
